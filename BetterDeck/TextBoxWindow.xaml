<Window x:Class="BetterDeck.TextBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterDeck"
        mc:Ignorable="d"
        Title="Enter profile name" Height="108" Width="300" ResizeMode="NoResize"
		WindowStartupLocation="CenterOwner">
	
	<Grid Background="#222126">
		<TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Foreground="White" Background="#565360" />
		
		<Button Content="OK" HorizontalAlignment="Left" Margin="57,45,0,0" VerticalAlignment="Top" Width="75" Click="OnOkClicked" />
		<Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="161,45,0,0" Click="OnCancelClicked" />
	</Grid>
</Window>
